<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aspproject.macclient.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="102dp"
        android:layout_height="43dp"
        android:layout_marginEnd="16dp"
        android:onClick="connectServer"
        android:text="Connect"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txtIP"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/txtIP"
        android:layout_width="186dp"
        android:layout_height="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:hint="Server IP"
        android:inputType="text|textPersonName"
        android:text="192.168.1.113"
        android:textSize="14sp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/txtPort"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:hint="IP Port"
        android:inputType="textPersonName"
        android:text="9920"
        android:textSize="14sp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtIP" />

    <EditText
        android:id="@+id/txtMsg"
        android:layout_width="320dp"
        android:layout_height="95dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="textMultiLine"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toTopOf="@+id/txtLog" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="96dp"
        android:layout_height="62dp"
        android:onClick="sendMsgServer"
        android:text="Send"
        android:layout_marginStart="8dp"
        android:layout_marginRight="37dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnConnect"
        app:layout_constraintLeft_toRightOf="@+id/txtPort"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.685" />

    <EditText
        android:id="@+id/txtLog"
        android:layout_width="322dp"
        android:layout_height="209dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Log"
        android:textIsSelectable="false"
        android:textSize="12sp"
        tools:scrollbars="vertical"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
